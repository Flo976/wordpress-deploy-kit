# WordPress V2 Simple Installation Environment Variables
# Copy this file to 'env' and customize the values below

#==============================================================================
# BASIC CONFIGURATION
#==============================================================================

# Domain name (required)
DOMAIN=example.com

# Server email for SSL certificates
EMAIL=admin@example.com

# Database settings
DB_NAME=wordpress
DB_USER=wpuser
DB_PASSWORD=changeme123!
DB_ROOT_PASSWORD=supersecret123!

# WordPress admin user
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=WpAdmin123!
WP_ADMIN_EMAIL=admin@example.com
WP_TITLE="Mon Site WordPress"
WP_LOCALE=fr_FR

#==============================================================================
# SSL CONFIGURATION
#==============================================================================

# Enable Let's Encrypt SSL (true/false)
ENABLE_SSL=true

# SSL staging mode for testing (true/false)
SSL_STAGING=false

#==============================================================================
# OPTIONAL SETTINGS
#==============================================================================

# Web root directory
WEB_ROOT=/var/www/html

# PHP version (default: 8.4)
PHP_VERSION=8.4

# MariaDB version (default: 11.4)
MARIADB_VERSION=11.4

# Basic security hardening (true/false)
ENABLE_FIREWALL=true